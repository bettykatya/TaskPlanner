<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/task_name_label"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/task_status_image"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_status_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:src="@drawable/abc_ic_star_black_36dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/task_decription_label"
        android:layout_below="@+id/task_name_label"
        android:layout_alignStart="@+id/task_name_label"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/task_date_label"
        android:layout_alignBottom="@+id/task_status_image"
        android:layout_alignStart="@+id/task_decription_label" />
</RelativeLayout>